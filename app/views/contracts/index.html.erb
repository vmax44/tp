<h1>Policies</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Number</th>
    <th>Date</th>
    <th>Date begin</th>
    <th>Date end</th>
    <th>Strahovatel</th>
    <th>Zastrahovanniy</th>
    <th>Cost</th>
    <th>IKP</th>
    <th></th>
  </tr>
 
<% @contracts.each do |c| %>
  <tr>
    <td><%= link_to c.number, edit_contract_path(c) %></td>
    <td><%= c.date %></td>
    <td><%= c.datestart %></td>
    <td><%= c.datefinish %></td>
    <td><%= "#{c.strahovatel.lastname} #{c.strahovatel.firstname}" %></td>
    <td><%= "#{c.zastrahovanniy.lastname} #{c.zastrahovanniy.firstname}" %></td>
    <td><%= c.cost %></td>
    <td><%= c.user.ikp %></td>
    <td><%= link_to "Remove", c, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate %>
<br>
 
